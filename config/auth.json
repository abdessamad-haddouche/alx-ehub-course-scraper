{
  "urls": {
    "base": "https://ehub.alxafrica.com",
    "dashboard": "https://ehub.alxafrica.com/",
    "login": "https://ehub.alxafrica.com/login"
  },
  "selectors": {
    "logged_in_indicators": [
      "img[src*='profilePhoto']",
      "p:contains('Hello')",
      ".flex.text-3xl.font-bold",
      ".user-avatar",
      ".profile-dropdown",
      "[data-testid='user-menu']",
      "a[href*='profile']"
    ],
    "user_greeting": "p.flex.text-3xl.font-bold",
    "user_points": "span.font-bold.text-sm.text-card-foreground",
    "user_avatar": "img[src*='profilePhoto']",
    "notification_bell": "svg circle[fill='#FF6B5E']",
    "login_page_indicators": [
      "form.space-y-4",
      "input[name='email']",
      "input[name='password']",
      "button[type='submit']"
    ],
    "login_form": {
      "form": "form.space-y-4",
      "email": "input[name='email']",
      "password": "input[name='password']",
      "submit": "button[type='submit']"
    },
    "error_messages": [
      ".alert-danger",
      ".error-message",
      ".notification.error",
      "[class*='error']"
    ]
  },
  "texts": {
    "welcome": "Welcome back!",
    "email_placeholder": "Enter your email",
    "password_placeholder": "Enter your password",
    "sign_in": "Sign in",
    "forgot_password": "Forgot password",
    "hello_prefix": "Hello"
  },
  "timeouts": {
    "page_load": 10,
    "element_wait": 10,
    "post_login_wait": 5,
    "redirect_wait": 5
  },
  "session": {
    "max_age_days": 7
  }
}